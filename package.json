    "dotenv": "^16.4.5",
    "ignore": "^6.0.2",
    "zod": "^3.23.8",
    "ollama-ai-provider": "^0.15.2"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.8.3",
    "@types/node": "^20.14.9",
    "ts-node": "^10.9.2",
    "tsup": "^8.1.0",
    "typescript": "^5.5.3"
  }
}
